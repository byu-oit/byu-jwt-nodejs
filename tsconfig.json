{
  "extends": "@tsconfig/esm/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2022"
    ]
  },
  "include": [
    "packages/*/src"
  ]
}
